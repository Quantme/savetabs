{
	"manifest_version": 2,
	"name": "SaveTabs",
	"version": "1.0",

	"description": "Save your open tabs locally and restore the previously saved tabs.",
	"author": "Martin Dreier",
	"homepage_url": "https://github.com/mdreier/savetabs",
	
	"applications": {
		"gecko": {
			"id": "savetabs@martindreier.de"
		}
	},

	"icons": {
		"48": "icons/savetabs-48.png",
		"96": "icons/savetabs-96.png"
	},
	

	"permissions": [
		"tabs",
		"storage",
		"activeTab"
	],

	"browser_action": {
		"default_icon": "icons/savetabs-32.png",
		"default_title": "Save Tabs",
		"default_popup": "popup/savetabs.html",
		"browser_style": true
	}
}
